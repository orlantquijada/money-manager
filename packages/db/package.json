    "drizzle-orm": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@types/pg": "catalog:",
    "tsx": "catalog:",
    "date-fns": "catalog:",
    "@biomejs/biome": "catalog:",
    "drizzle-kit": "^0.31.7",
    "typescript": "catalog:",
    "ultracite": "catalog:"
  }
