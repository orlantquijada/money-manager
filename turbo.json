{
  "ui": "tui",
  "$schema": "https://turborepo.org/schema.json",
  "globalEnv": ["DATABASE_URL", "CORS_ORIGIN", "PORT"],
  "tasks": {
    "topo": {
      "dependsOn": ["^topo"]
    },
    "dev": {
      "cache": false
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".expo/**", "dist/**", "api/**"]
    },
    "lint": {
      "dependsOn": ["^topo", "^build"]
    },
    "clean": {
      "cache": false
    },
    "//#clean": {
      "cache": false
    },
    "type-check": {
      "dependsOn": ["^topo", "^build"]
    }
  }
}
