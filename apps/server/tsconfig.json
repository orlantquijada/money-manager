{
  "include": ["api/**/*.ts"],
  "compilerOptions": {
    "lib": ["ES2020"],
    "module": "ES2022",
    "target": "es2022",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "moduleResolution": "Node"
  }
}
