{
  "$schema": "https://turborepo.org/schema.json",
  "globalEnv": ["DATABASE_URL"],
  "tasks": {
    "db:generate": {
      "inputs": ["prisma/schema.prisma"],
      "cache": false
    },
    "db:push": {
      "inputs": ["prisma/schema.prisma"],
      "cache": false
    },
    "db:deploy": {
      "inputs": ["prisma/schema.prisma"],
      "cache": false
    },
    "dev": {
      "dependsOn": ["^db:generate"],
      "cache": false
    },
    "build:deploy": {
      "dependsOn": ["build", "^db:deploy"],
      "outputs": ["dist/**", "public/**"]
    },
    "build": {
      "dependsOn": ["^build", "^db:generate"],
      "outputs": [".expo/**", "dist/**", "public/**"]
    },
    "start": {
      "dependsOn": ["^build"]
    },
    "lint": {
      "outputs": []
    },
    "clean": {
      "cache": false
    },
    "//#clean": {
      "cache": false
    },
    "type-check": {
      "dependsOn": ["^db:generate"],
      "cache": false
    }
  }
}
