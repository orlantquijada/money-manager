{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pnpm build:server"
  },
  "deploy": {
    "startCommand": "pnpm start:server",
    "healthcheckPath": "/ping",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
